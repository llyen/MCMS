{# src/Mcms/UserBundle/Resources/views/show.html.twig #}
{% extends '::dashboard.html.twig' %}

{% block javascripts_head %}
	<script type="text/javascript">
		$(document).ready(function() {
    		$('.example').dataTable();
		} );
	</script>
{% endblock %}

{% block title %} Lista użytkowników {% endblock %}

{% block sidebar %} {% include 'McmsUserBundle::sidebar.html.twig' %} {% endblock %}


{% block content %}

 	<h1 class="pageTitle">Lista użytkowników</h1>
	<div class="tableOpt"></div><!--end table Options-->	
		<table cellpadding="0" cellspacing="0" class="tableHead" width="100%" class="example">
				<colgroup>
					<col class="head1" width="7%" />
					<col class="head0" width="18%" />
					<col class="head1" width="18%" />
					<col class="head0" width="18%" />
					<col class="head1" width="18%" />
					<col class="head0" width="18%" />					
				</colgroup>
				<tr>
					<td>Id</td>
					<td>Login</td>
					<td>Imię</td>
					<td>Nazwisko</td>
					<td>Aktywność</td>
					<td>Akcja</td>  					
				</tr>
		</table>
	<div class="tableWrapper">
        <table cellpadding="0" cellspacing="0" class="table" class="example" width="100%">
                <colgroup>
                    <col class="con1" width="7%" />
                    <col class="con0" width="18%" />
                    <col class="con1" width="18%" />
                    <col class="con0" width="18%" />
					<col class="con1" width="18%" />
					<col class="con0" width="18%" /> 					
                </colgroup>

		
			{% for user in users %}
				<tr>
					<td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
					<td>{{ user.username }}</td>
					<td>{{ user.firstname }}</td>
					<td>{{ user.lastname }}</td>
					<td> 
					{% if user.isactive %}
                            TRUE
                        {% else %}
                            FALSE
                        {% endif %}
					</td>
					<td><a class="profilelink" href="{{ path('user_show', { 'id': user.id }) }}" title="Zobacz szczegoly uzytkownika"></a></td>
				</tr>
			{% endfor %}

		</table>		
	</div>	
{% endblock %}