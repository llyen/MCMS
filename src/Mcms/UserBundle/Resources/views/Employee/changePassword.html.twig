{# src/Mcms/UserBundle/Resources/views/Employee/changePassword.html.twig #}
{% extends '::employeeDashboard.html.twig' %}

{% block title %}{{ app.user }} - Zmiana hasła użytkownika{% endblock %}

{% block content %}
	<h1>Zmiana hasła użytkownika <em>{{app.user}}</em></h1>
    <form action="{{ path('employee.updatePassword')}}" method="post" {{ form_enctype(form) }}>
        {{form_errors(form)}}
        {{ form_widget(form) }}
        <input type="submit" />
    </form>
{% endblock %}