{# src/Mcms/UserBundle/Resources/views/Patient/editProfile.html.twig #}
{% extends '::patientDashboard.html.twig' %}
{% form_theme form '::formErrors.html.twig' %}

{% block title %}{{ app.user }} - Edycja profilu użytkownika{% endblock %}

{% block content %}
	{{ form_errors(form) }}
	<h1 class="pageTitle">Edycja profilu użytkownika <em style="color:#4C6A98">{{app.user}}</em></h1>
	<div class="window1">
	<h3><span></span></h3>
	<div class="inside">
    <form class="form_default" action="{{ path('patient.updateProfile') }}" method="post" {{ form_enctype(form) }}>
    
    	<label>Imię:</label> {{ form_widget(form.user.firstName) }}<br />
    	<label>Nazwisko:</label> {{ form_widget(form.user.lastName) }}<br />
        <label>PESEL:</label> {{ form_widget(form.patient.pesel) }}<br />
        <label>Adres:</label> {{ form_widget(form.patient.address1) }}<br />
        <label></label>{{ form_widget(form.patient.address2) }}<br />
        <label>Kod pocztowy:</label> {{ form_widget(form.patient.postalcode) }}<br />
        <label>Miejscowość:</label> {{ form_widget(form.patient.city) }}<br />
    	{{ form_rest(form) }}
    
   
        <input type="submit" />
    
    </form>
</div>
</div>
{% endblock %}