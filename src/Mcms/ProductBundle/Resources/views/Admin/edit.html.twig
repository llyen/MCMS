{% extends '::dashboard.html.twig' %}
{% form_theme form '::formErrors.html.twig' %}

{% block title %} Edycja produktu {% endblock %}

{% block sidebar %} {% include 'McmsProductBundle:Admin:sidebar.html.twig' %} {% endblock %}

{% block content %}
	{{ form_errors(form.price) }}
	<h1 class="pageTitle">Edycja produktu</h1>
	<div class="window1">
				<h3><span>{{ product.name }} </span><form action="{{ path('admin.productDelete', { 'id': product.id }) }}" method="post">
				{{ form_widget(deleteForm) }}
				<button class="button_blue" style="float:right; margin:-41px 25px 0 0" type="submit" onClick="return confirm('Czy na pewno chcesz usunąć wskazany produkt?')">Usuń</button>
			</form></h3>
		<div class="inside">			
			<form class="form_default" action="{{ path('admin.productUpdate',{ 'id': product.id }) }}" method="post" {{ form_enctype(form) }}>
				<p>	
					<label>Nazwa:</label>  {{ form_widget(form.name) }}</br></br>
					<label>Cena:</label>  {{ form_widget(form.price) }}					
					{{ form_rest(form) }}
				</p>
				<button type="submit">Aktualizuj</button>
			</form>
		</div>
	</div>
{% endblock %}
