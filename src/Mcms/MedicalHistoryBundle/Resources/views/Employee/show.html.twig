{# src/Mcms/MedicalHistoryBundle/Resources/views/Employee/show.html.twig #}
{% extends '::employeeDashboard.html.twig' %}

{% block title %} Karta pacjenta - szczegóły wpisu #{{ entry.id }} {% endblock %}

{% block content %}
    <h1 class="pageTitle">Szczegóły wpisu #{{ entry.id }}</h1>
	<div class="window1">
	<h3><span style="height:20px;"><b>Data wpisu:</b> {{ entry.createdAt|date('Y.m.d H:i') }} (<small>Ostatnia aktualizacja: {{ entry.updatedAt|date('Y.m.d H:i') }}</small>) | <b>Lekarz dokonujący wpisu:</b> {{ entry.doctor }}
	 {% if entry.payment %} <a href="{{ path('employee.paymentShow', { patientId: entry.patient.id, paymentId: entry.payment.id }) }}"><button class="button button_blue" type="submit" style="float:right; margin:-4px 0 0 0;">PŁATNOŚĆ</button></a>{% endif %}
	</span></h3>
		<div class="inside">
  		<div>
    		{{ entry.content }}
    	</div>
		</div>
	</div>	
{% endblock %}