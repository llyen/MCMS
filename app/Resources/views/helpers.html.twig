{# app/Resources/helpers.html.twig #}

{% macro tab(route, class, caption) %} 
    <li{% if app.request.attributes.get('_route') == route %} class="current" {% endif %}><a href="{{ path(route) }}" class="{{ class }}"><span>{{ caption }}</span></a></li> 
{% endmacro %}

{% macro menu(route, class, caption) %}
	<li {% if app.request.attributes.get('_route') == route %} class="{{ class }} current" {% endif %}{% if app.request.attributes.get('_route') != route %} class="{{ class }}" {% endif %} ><a href="{{ path(route) }}">{{ caption }}</a></li>
{% endmacro %}